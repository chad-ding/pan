{
	"name": "pan",
	"private": true,
	"description": "H5开发工具集",
	"version": "1.1.0",
	"scripts": {
		"dev": "vite --mode=development --open",
		"watch": "run-p watch:f watch:b",
		"build": "rm -rf ./dist && run-p build:b build:f",
		"watch:b": "node ./build/backend.js --watch",
		"watch:f": "node ./build/frontend.js --watch",
		"build:b": "node ./build/backend.js",
		"build:f": "node ./build/frontend.js",
		"pub": "npm run build && npm run zip",
		"zip": "node zip.js",
		"c": "cz"
	},
	"dependencies": {
		"@element-plus/icons-vue": "^2.1.0",
		"element-plus": "^2.2.29",
		"js-base64": "^3.7.7",
		"jsoneditor": "^10.1.0",
		"qrcode": "^1.5.3",
		"utf8": "^3.0.0",
		"vue": "^3.2.45"
	},
	"author": "CHAD.DING",
	"license": "MIT",
	"keywords": [
		"h5",
		"chrome plugin",
		"qrcode",
		"uri encode decode",
		"color transform",
		"json format"
	],
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@rollup/plugin-replace": "^6.0.2",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vue/eslint-config-standard": "^8.0.1",
		"adm-zip": "^0.5.14",
		"chalk": "^4.1.2",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"date-format": "^4.0.14",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.30.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.1",
		"eslint-plugin-promise": "^4.3.1",
		"eslint-plugin-vue": "^7.20.0",
		"fs-extra": "^11.2.0",
		"glob": "^11.0.2",
		"husky": "^4.3.8",
		"ip": "^2.0.0",
		"less": "^4.1.3",
		"lint-staged": "^10.5.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"rollup": "^4.21.2",
		"rollup-plugin-replace": "^2.2.0",
		"rollup-plugin-terser": "^7.0.2",
		"stylelint": "^13.13.1",
		"stylelint-config-css-modules": "^2.3.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-order": "^4.1.0",
		"stylelint-prettier": "^1.2.0",
		"unplugin-auto-import": "^0.13.0",
		"unplugin-vue-components": "^0.23.0",
		"vite": "^5.3.3",
		"vite-plugin-html": "^3.2.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.{js,jsx,vue}": "eslint",
		"*.{css,less,vue}": "stylelint"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}
